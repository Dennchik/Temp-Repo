extends ../../../layouts/app_layout
append link
	link(rel="stylesheet" type="text/css" href="@@webRoot/css/service-style.min.css")
prepend script
	script(defer="defer" src="@@webRoot/js/vendors/runtime.min.js")
	script(defer="defer" src="@@webRoot/js/vendors/anime-vendors.min.js")
	script(defer="defer" src="@@webRoot/js/vendors/react-vendors.min.js")
	script(defer="defer" src="@@webRoot/js/video-podcasts.min.js")
block style
	style.
		#video_player {
			position: relative;
			width: 100%;
			height: 0;
			padding-top: 56.25%; /* Соотношение сторон 16:9 */
			padding-bottom: 0;
			overflow: hidden;
		}

		.VideoPlayerEmbed__button {
			display: none;
		}

		.video_player iframe {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			border: none;
			padding: 0;
			margin: 0;
		}
block title
	- var text='Студия звукозаписи "Gusli" Media-Group'


block page-content
	.page
		block button
			._aside#scrollButton
				+iconfont('angle-down', '_button')